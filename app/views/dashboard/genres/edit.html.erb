<div class="dashboard-full-page">
  <div class="dashboard-main-contents">
    <aside class="dashboard-aside">
      <%= render partial: 'layouts/dashboard/sidebar' %>
    </aside>
    <article class="dashboard-article">
      <h1 style="font-weight: bold;">カテゴリ情報一覧</h1>
      <br>
      <%= form_with model: @genre, url: dashboard_genre_path(@genre), local: true do |f| %>
        <div>
          <%= f.label :name, "カテゴリ名" %>: <%= f.text_field :name, class: "form-control", style: "margin-left: 32px;" %>
        </div>
        <br>
        <div>
          <%= f.label :description, "カテゴリの説明" %>: <%= f.text_field :description, class: "form-control" %>
        </div>
        <br>
        <div>
          <%= f.label :major_category_name, "カテゴリ" %>: <%= f.text_field :major_category_name, class: "form-control", style: "margin-left: 47px;" %>
        </div>
        <br>
        <div>
          <%= f.submit "更新",  class: "dashboard-form-btn" %>
        </div>
      <% end %>
      <br>
      <div><%= link_to "カテゴリ一覧に戻る", dashboard_genres_path %></div>
    </article>
  </div>
</div>