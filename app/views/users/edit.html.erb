<div class="full-page", style="min-height: calc(100vh - 150px);">
  <h1 style="max-width: 1100px;margin: 0 auto;padding: 20px;">アカウント編集</h1>
  <div class="mypage-edit-profile">
    <div class="form-all">
      <%= form_with model: @user, url: mypage_users_path, local: true, method: :put do |f| %>
        
        <span style="margin: 43%;"><%= image_tag "/images/うまログ.png", class: "logo" %></span>
        
        <div style="margin-left: 23%;">
          <label>現在の写真: </label>
          <% if @user.image.attached? %>
            <%= image_tag @user.image, class: "user-profile-image" %>
          <% else %>
            <i class="fas fa-user fa-3x"></i>
          <% end %>
        </div>
        <br>
        <div  style="margin-left: 23%;">
          <%=f.label :image, "アバター" %>: <%= f.file_field :image %>
        </div>
        <br>
        <div style="margin-left: 23%;">
          <%= f.label :name, "ニックネーム" %>: <%= f.text_field :name, autofocus: true, autocomplete: "name", style: "border: solid 1px;" %>
        </div>
        <br>
        <div class="field",  style="margin-left: 23%;">
          <%= f.label :email, "メールアドレス" %>: <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "border: solid 1px;" %>
        </div>
        <br>
        <div>
          <button type='submit' class="form-btn", style="margin-left: 23%;">保存する</button>
        </div>
      <% end %>
      <div>
        <%= link_to "退会する", mypage_delete_users_path, method: :delete, local: true, style: "margin-left: 80%;" %>
      </div>
    </div>
  </div>
</div>
<%= render "layouts/footer" %>