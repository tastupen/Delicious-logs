<div class="full-page", style="min-height: calc(100vh - 250px);">
  <h2 style="max-width: 1100px;margin: 0 auto;padding: 20px;">新しいパスワード設定</h2>
  <div class="mypage-edit">
    <div class="form-all">
      <%= form_with url: mypage_password_users_path, local: true, method: :put do |f| %>
        <span><%= image_tag "/images/うまログ.png", class: "logo" %></span>
        
        <div>
          <%= f.label :password, "新しいパスワード" %>: <%= f.password_field :password, autocomplete: "new-password", style: "border: solid 1px;" %>
        </div>
        <br>
        <div>
          <%= f.label :password_confirmation, "確認用" %>: <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "border: solid 1px;" %>
        </div>
        <br>
        <div>
          <button type='submit' class="form-btn">パスワード更新</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "layouts/footer" %>