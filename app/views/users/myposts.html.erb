<div class="full-page">
  <h1 style="max-width: 1100px;margin: 0 auto;padding: 20px;">投稿一覧</h1>
  <div class="mypage-edit">
    <div class="form-all">
      <% @myposts.each do |product| %>
      　<div class="myposts-display">
      　   <div>
      　     <% if product.images.attached? %>
              <%= image_tag product.image, class: "image" %>
            <% else %>
              <%= image_tag "/images/dummy.png", class: "image" %>
            <% end %>
      　   </div>
      　   <div>
      　     <div>
              <div><label class="show-product-font">商品名:</label><%= product.name %></div>
      　       <div><label class="show-product-font">おすすめ度:</label><%= score_on_star(product.recommend) %></div>
      　     </div>
      　   </div>
      　 　<div>
      　 　   <div>
      　 　     <%= link_to edit_product_path(product) do %>
      　 　       <i class="fas fa-edit"></i>
      　 　     <% end %>
      　 　   </div>
      　 　   <div>
      　 　     <%= link_to product_path(product), method: :delete, data: { confirm: '削除しますか？'}  do %>
      　 　       <i class="fas fa-trash"></i>
      　 　     <% end %>
      　 　   </div>
      　 　</div>
      　</div>
      <% end %>
    </div>
  </div>
  <h1 style="max-width: 1100px;margin: 0 auto;padding: 20px;">いいね投稿一覧</h1>
  <div class="mypage-edit">
    <div class="form-all">
      <% @likes.each do |like| %>
        <% product = Product.find_by(id: like.product_id) %>
          <div class="myposts-likes-display">
            <div>
      　       <% if product.images.attached? %>
                <%= image_tag product.image, class: "image" %>
              <% else %>
                <%= image_tag "/images/dummy.png", class: "image" %>
              <% end %>
      　     </div>
      　     <div>
      　       <div>
                <div><label class="show-product-font">商品名:</label><%= product.name %></div>
      　         <div><label class="show-product-font">おすすめ度:</label><%= score_on_star(product.recommend) %></div>
      　       </div>
      　     </div>
          </div>
      <% end %>
    </div>
  </div>
</div>