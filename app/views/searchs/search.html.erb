<div class="full-page">
  <h1 style="max-width: 1100px;margin: 0 auto;padding: 20px;">検索結果</h1>
  <div>
    <% if @products.present? %>
    <% @products.each do |product| %>
      <%= link_to product_path(product) do %>
        <div class="myposts-likes-display">
          <div>
      　     <% if product.images.attached? %>
              <% product.images.each do |image| %>
                <%= image_tag image, class: "show-post-image" %>
              <% end %>
            <% else %>
              <%= image_tag "/images/dummy.png", class: "show-post-image" %>
            <% end %>
      　   </div>
      　   <div>
      　     <div>
              <div><label class="show-product-font">商品名:</label><%= product.name %></div>
      　       <div><label class="show-product-font">おすすめ度:</label><%= score_on_star(product.recommend) %></div>
      　     </div>
    　     </div>
        </div>
      <% end %>
    <% end %>
    <% end %>
  </div>
  <div>
    <% if @genres.present? %>
      <% @genres.each do |product| %>
        <%= link_to product_path(product) do %>
          <div class="myposts-likes-display">
            <div>
      　       <% if product.images.attached? %>
                <% product.images.each do |image| %>
                  <%= image_tag image, class: "show-post-image" %>
                <% end %>
              <% else %>
                <%= image_tag "/images/dummy.png", class: "show-post-image" %>
              <% end %>
      　     </div>
      　     <div>
      　       <div>
                <div><label class="show-product-font">商品名:</label><%= product.name %></div>
      　         <div><label class="show-product-font">おすすめ度:</label><%= score_on_star(product.recommend) %></div>
      　       </div>
    　       </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
